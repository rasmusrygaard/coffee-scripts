<div class="row">
  <div class="header">
    <h1>{{script.title}}</h1>
  </div>
</div>

<div class="row" id="program">
  <div class="col-xs-10 col-xs-offset-1">

    <div class="row">
      <p>{{script.description}}</p>

      {{#if hasPrelude}}
        <div class="row">
          <h3>Preliminaries</h3>

          <div class="row">
            <div class="col-xs-1 col-xs-offset-2">
              <img src="/images/coffee.svg" class="recipe-icon">
            </div>
            <div class="col-xs-3">
              <p>{{script.ingredients.coffee}}</p>
            </div>

            <div class="col-xs-1">
              <img src="/images/grinder.svg" class="recipe-icon">
            </div>
            <div class="col-xs-3">
              <p>{{script.ingredients.grind}}</p>
            </div>
          </div>
          
          <div class="row">
            <div class="col-xs-1 col-xs-offset-2">
              <img src="/images/water.svg" class="recipe-icon">
            </div>
            <div class="col-xs-3">
              <p>{{script.ingredients.water}}</p>
            </div>

            <div class="col-xs-1">
              <img src="/images/timer.svg" class="recipe-icon">
            </div>
            <div class="col-xs-3">
              <p>{{script.ingredients.time}}</p>
            </div>
          </div>
          
        </div>
    </div> 
      {{/if}}

      <p class="text-center" id="start-button-box">
        <button type="button" class="btn btn-primary btn-lg" id="start-button">Begin</button>
      </p>

    </div>


  </div>

</div>
