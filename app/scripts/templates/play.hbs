<div class="row">
  <div class="header">
    <h1>{{script.title}}</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 col-sm-4 col-md-4 col-xs-offset-3 col-sm-offset-4 col-md-offset-4">
    <div class="timer-panel" id="timer">

      <div class="panel-heading">

        <table class="timer-table">
          <tr>
            <td class="text-right minutes">
              <p id="minutes-time">0</p>
            </td>

            <td class="text-right time-separator">
              <p id="minutes-time">:</p>
            </td>

            <td class="text-right seconds">
              <p id="seconds-time">0</p>
            </td>
          </tr>
        </table>

      </div>
    </div>
  </div>

</div>

<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-8 col-sm-offset-2 col-md-offset-2">
    <div class="panel-body">
      <h3>Right Now</h3>
      <ul id="this-scene">
      </ul>

      <div class="preview-container">
          <h3>Up Next</h3>
          
          <ul id="next-scene" class="preview-scene">
          </ul>
      </div> 

    </div>
  </div>
</div>

